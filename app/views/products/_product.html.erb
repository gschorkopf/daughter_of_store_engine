<%= link_to store_product_path(current_store, product) do %>
  <div class="products span3">
    <p><%= image_tag gen_image_url(product.store.name.downcase, product.id) %></p>
    <h5><%= product.title.titleize %></h5>
    <p><%= t('product.price') %>: <%= number_to_currency(product.price) %></p>
  </div>
<% end %>
