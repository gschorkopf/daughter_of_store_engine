<% if logged_in? %>
  <%= form_tag buy_now_path, id: "buyNowForm" do %>
    <%= hidden_field_tag :product_id, product.id %>
    <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button btn-custom-lighten btn-block"
            data-key="pk_test_osSOH0LyEEACshdRsLjyvGSz"
            // TODO: add store favicon or logo here
            data-image=""
            data-name="<%= t('store.name') %>"
            data-label="<%= t('product.buynow') %>"
            data-amount="<%= product.price * 100 %>">
    </script>

  <% end %>
<% else %>
  <%= button_to t('product.buynow'), login_path, class: 'btn btn-primary span3', method: :get %>
<% end %>
