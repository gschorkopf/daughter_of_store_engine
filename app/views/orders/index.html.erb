<div class="order-index">
  <%= render partial: '/users/user_navigation', locals: { active: :orders } %>

  <div class="span8">

    <h1><%= t('order.history') %></h1>
    <hr>

    <table class="table table-striped">
      <thead>
      <th>#</th>
      <th><%= t('model.status') %></th>
      <th><%= t('order.date') %></th>
      <th><%= t('total') %></th>
      </thead>
      <tbody>
      <%= render partial: 'order', collection: @orders %>
      </tbody>
    </table>

    <div class="pagination"> <%= paginate @orders %></div>
  </div>
</div>
