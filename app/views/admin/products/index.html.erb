<div class="user-index">
  <%= render partial: 'shared/admin_navigation', :locals => { active: :products }  %>

  <div class="span8">
    <h1><%= t('product.collection') %></h1>
    <hr>

    <div class="pull-right">
      <%= button_to 'New Product',
                    new_store_admin_product_path(current_store),
                    method: :get,
                    class: 'btn btn-large btn-custom-lighten' %>
    </div>

    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= t 'product.title' %></th>
        <th><%= t 'product.price' %></th>
        <th><%= t 'categories.self' %></th>
        <th><%= t 'model.status' %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <%= render @products %>
      </tbody>
    </table>
    <div class="pull-right"> <%= paginate @products %> </div>
  </div>
</div>
